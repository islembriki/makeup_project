{% extends 'base.html.twig' %}

{% block title %}Our Products{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center">Our Products</h1>

    {% if products is empty %}
        <p class="text-center">No products available at the moment.</p>
    {% else %}
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for product in products %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        {# Check if the product has an image file. If yes, display the product image. #}
                        {#{% if product.imageFile %}#}
                            {#<img src="{{ asset('uploads/products/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">#}
                        {#{% else %}#}
                            {# No image file for this product. #}
                        {#{% endif %}#}
                        <img src="{{ asset('images/products/' ~ product.image )}}" class="card-img-top" alt="No image available">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text text-truncate">{{ product.description }}</p>
                            <div class="mt-auto">
                                <p class="fw-bold">${{ product.price|number_format(2, '.', ',') }}</p>
                                <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-primary w-100">View details</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
