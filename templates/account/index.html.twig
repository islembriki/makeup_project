{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block body %}
<div class="container mt-5">

    <h1 class="mb-4">My Account</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">User Information</h5>
            <p><strong>Email:</strong> {{ user.email }}</p>
            {% if user.fullName is not empty %}
                <p><strong>Name:</strong> {{ user.fullName }}</p>
            {% endif %}
            {% if user.address is not empty %}
                <p><strong>Address:</strong> {{ user.address }}</p>
            {% endif %}
            {% if user.country is not empty %}
                <p><strong>Country:</strong> {{ user.country }}</p>
            {% endif %}
            {% if user.phone is not empty %}
                <p><strong>Phone:</strong> {{ user.phone }}</p>
            {% else %}
                <p><strong>Phone:</strong> Not provided</p>
            {% endif %}
            
        </div>
    </div>

    <h2 class="mb-3">Order History</h2>

    {% if orders is empty %}
        <div class="alert alert-info">You have no orders yet.</div>
    {% else %}
        {% for order in orders %}
            <div class="card mb-3 shadow-sm">
                <div class="card-header d-flex justify-content-between">
                    <div>
                        <strong>Order #{{ order.id }}</strong> — {{ order.createdAt|date('d/m/Y H:i') }}
                    </div>
                    <span class="badge bg-secondary">{{ order.status|capitalize }}</span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {% for item in order.items %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ item.product.name }}</strong><br>
                                    <small class="text-muted">{{ item.quantity }} × {{ item.product.price|number_format(2, '.', ' ') }} €</small>
                                </div>
                                <div class="fw-bold">
                                    {{ (item.quantity * item.product.price)|number_format(2, '.', ' ') }} €
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="card-footer text-end">
                    <strong>Total: {{ order.total|number_format(2, '.', ' ') }} €</strong>
                </div>
            </div>
        {% endfor %}
    {% endif %}

</div>
{% endblock %}
