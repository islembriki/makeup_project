{% extends 'base.html.twig' %}


{% block title %}About Us{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-image: url('{{ asset("images/landing.jpeg") }}');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
        }
        .about-container {
            background-color: rgba(255, 255, 255, 0.95); /* stronger contrast */
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15); /* stronger shadow */
            font-family: 'Segoe UI', sans-serif;
            max-width: 800px;
            margin: 80px auto 40px;
        }

        .about-container h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

        .about-container p {
            font-size: 1.1rem;
            color: #555;
            margin-bottom: 15px;
            text-align: center;
        }

        .about-container ul {
            list-style: none;
            padding: 0;
        }

        .about-container li {
            background: #f4f4f4;
            margin: 10px 0;
            padding: 12px 20px;
            border-radius: 8px;
            font-size: 1rem;
            color: #444;
            display: flex;
            align-items: center;
        }

        .about-container li a {
            color: #007bff;
            text-decoration: none;
            margin-left: 8px;
        }

        .about-container li a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="about-container">
            <h1>About Us</h1>
            
            <p>Welcome to our shop!</p>
            <p>You can contact us via:</p>
            
            <ul>
                <li>Email: <a href="mailto:hashandhash@gmail.com">hashandhash@ourshop.com</a></li>
                <li>Phone: <a href="tel:+216234567890">+216 234 567 890</a></li>
                <li>Instagram: <span style="color: #007bff;">Our Instagram Account</span></li>
                <li>Facebook: <span style="color: #007bff;">Our Facebook Page</span></li>
                <li>Address: 123 Paris Street, Tunis, Tunisia</li>
            </ul>

            <a href="{{ path('app_contact') }}" class="btn btn-outline-primary mt-3">Contact Us</a>
        </div>
    </div>
{% endblock %}
